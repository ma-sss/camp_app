<% unless current_user.favorite_find(admin.id) %>
  <%= form_with(model: favorite, url: favorites_path, local: true, class: 'form') do |form| %>
    <%= form.hidden_field :user_id, value: current_user.id %>
    <%= form.hidden_field :admin_id, value: admin.id %>
    <div class="submit">
      <%= form.submit value: 'お気に入り', class: 'btn btn-primary mx-auto d-block' %>
    </div>
  <% end %>
<% else %>
  <%= form_with(model: favorite, url: favorite_path(:admin_id), method: :delete, local: true, class: 'form') do |form| %>
    <%= form.hidden_field :admin_id, value: admin.id %>
    <div class="submit">
      <%= form.submit value: 'お気に入り解除', class: 'btn btn-primary mx-auto d-block' %>
    </div>
  <% end %>
<% end %>
